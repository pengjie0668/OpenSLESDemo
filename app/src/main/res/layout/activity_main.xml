<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:id="@+id/sample_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="recourdsound"
        android:text="录音"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/sample_stop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="recourdstop"
        android:text="停止"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="播放 assets 文件"
        android:textAllCaps="false"
        android:onClick="play_assets"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="从C++层播放PCM数据文件"
        android:textAllCaps="false"
        android:onClick="play_pcm"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="从java层获取PCM数据播放"
        android:textAllCaps="false"
        android:onClick="play_javapcm"/>

</LinearLayout>
